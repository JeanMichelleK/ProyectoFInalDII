@model EC.Pasaje

@{
    ViewBag.Title = "FormPasajeVentaAlta";
}

<h2>FormPasajeVentaAlta</h2>


 @ViewBag.Mensaje


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
       <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Asiento, htmlAttributes: new { @class = "control-label col-md-2" })
                 </td>
                 <td>
                     @Html.TextBoxFor(model => model.Asiento, new { htmlAttributes = new { @class = "form-control" } })
                </td>

           </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.NroPasaporte, htmlAttributes: new { @class = "control-label col-md-2" })
                </td>
                <td>
                    @Html.DropDownListFor(model => model.NroPasaporte, (SelectList)ViewBag.ListaCliente)
                </td>
            </tr>
            <tr>
                <td></td>
                <td> <input type="submit" value="Asignar" class="btn btn-default" /></td>
                <td>
                    @Html.ActionLink("Terminar Venta","GuardoVenta",null,new { @class = "btn btn-default" })
                </td>
           </tr>
        </table>
    </div>
}


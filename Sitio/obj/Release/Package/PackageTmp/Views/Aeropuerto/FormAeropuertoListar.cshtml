@model IEnumerable<EC.Aeropuerto>

@{
    ViewBag.Title = "FormAeropuertoListar";
}

<h2>Listado de Aeropuertos</h2>


@ViewBag.Mensaje

<p>
    @Html.ActionLink("Nueva", "FormAeropuertoNuevo") |
    @Html.ActionLink("Volver", "PaginaMenu", "Home")
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        @Html.TextBox("DatoFiltro")
        <input type="submit" value="Filtrar" class="btn btn-default" />
        @Html.ActionLink("Limpiar", "FormAeropuertoListar", null, new { @class = "btn btn-default" })
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImpuestoSalida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImpuestoLlegada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodigoC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ciudad.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (EC.Aeropuerto item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImpuestoSalida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImpuestoLlegada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad.CodigoCiudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ciudad.Nombre)
        </td>
        <td>
            @Html.ActionLink("Modificar", "FormAeropuertoModificar", new { item.CodigoA }) |
            @Html.ActionLink("Consultar", "FormAeropuertoConsultar", new { item.CodigoA }) |
            @Html.ActionLink("Eliminar", "FormAeropuertoBaja", new { item.CodigoA })
        </td>
    </tr>
}

</table>
